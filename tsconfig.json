// Configs to JS files generation
{
  "compilerOptions": {
    "target": "es6", // JS version
    "module": "commonjs", // Module to Node.js use
    "strict": true, // Type check
    "esModuleInterop": true, // Import modules compatibility
    "skipLibCheck": true, // Ignore dependencies type check
    "outDir": "./build", // Output JS files path
    "rootDir": "./src", // Input TS files path
    "resolveJsonModule": true // Allow import JSON files
  },
  "include": [
    "./src/**/*.ts" // Every .ts files in src folder
  ],
  "exclude": [ // Used to not ask if these .ts files should also be compiled when compile is running
    "./node_modules",
    "./jest.config.ts",
    "./tests",
    "./build",
  ]
}
